<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercises"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="layout.Exercises"
    android:background="#6db8ba" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/deep_breathing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:id="@+id/breathing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="DEEP BREATHING"
            android:textColor="#ede9e3"
            android:textSize="20sp"
            android:letterSpacing="0.3" />

        <TextView
            android:id="@+id/breathing_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Breathe deep to calm down"
            android:textColor="#ede9e3"
            android:textSize="16sp"
            android:layout_below="@+id/breathing_title" />

        <View
            android:id="@+id/divider1"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/breathing_sub"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:background="#ede9e3"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/muscle_relaxation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deep_breathing">

        <TextView
            android:id="@+id/muscle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="MUSCLE RELAXATION"
            android:textColor="#ede9e3"
            android:textSize="20sp"
            android:letterSpacing="0.3" />

        <TextView
            android:id="@+id/muscle_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Relax your muscles"
            android:textColor="#ede9e3"
            android:textSize="16sp"
            android:layout_below="@+id/muscle_title" />

        <View
            android:id="@+id/divider2"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/muscle_sub"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:background="#ede9e3"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sleeping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/muscle_relaxation">

        <TextView
            android:id="@+id/sleep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="SLEEPING"
            android:textColor="#ede9e3"
            android:textSize="20sp"
            android:letterSpacing="0.3" />

        <TextView
            android:id="@+id/sleeping_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Get a great night of sleep"
            android:textColor="#ede9e3"
            android:textSize="16sp"
            android:layout_below="@+id/sleep_title"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/sleeping_sub"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:background="#ede9e3"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleeping">

        <TextView
            android:id="@+id/walking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="WALKING"
            android:textColor="#ede9e3"
            android:textSize="20sp"
            android:letterSpacing="0.3" />

        <TextView
            android:id="@+id/walking_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Walk away your troubles"
            android:textColor="#ede9e3"
            android:textSize="16sp"
            android:layout_below="@+id/walking_title" />

        <View
            android:id="@+id/divider4"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/walking_sub"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:background="#ede9e3"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cycling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walking">

        <TextView
            android:id="@+id/cycling_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CYCLING"
            android:textColor="#ede9e3"
            android:textSize="20sp"
            android:letterSpacing="0.3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Ride out your worries"
            android:textColor="#ede9e3"
            android:textSize="16sp"
            android:layout_below="@+id/cycling_title" />

    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
