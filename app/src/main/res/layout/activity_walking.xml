<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_walking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#6db8ba"
    tools:context="sh.jer.unanxiety.Walking">

    <RelativeLayout
        android:id="@+id/minutes_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/minutes_15_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 MINUTES"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:letterSpacing="0.3"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/minutes_15_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fifteen brisk minutes"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/minutes_15_title" />

        <View
            android:id="@+id/minutes_15_divider"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="#ede9e3"
            android:layout_below="@+id/minutes_15_description"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minutes_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes_15"
        android:layout_below="@+id/minutes_15">

        <TextView
            android:id="@+id/minutes_30_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 MINUTES"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:letterSpacing="0.3"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/minutes_30_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thirty refreshing minutes"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/minutes_30_title" />

        <View
            android:id="@+id/minutes_30_divider"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="#ede9e3"
            android:layout_below="@+id/minutes_30_description"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minutes_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes_15"
        android:layout_below="@+id/minutes_30">

        <TextView
            android:id="@+id/minutes_60_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 HOUR"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:letterSpacing="0.3"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/minutes_60_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="One energizing hour"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/minutes_60_title" />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="#ede9e3"
            android:layout_below="@+id/minutes_60_description"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minutes_120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes_15"
        android:layout_below="@+id/minutes_60">

        <TextView
            android:id="@+id/minutes_120_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 HOURS"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:letterSpacing="0.3"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/minutes_120_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Two invigorating hours"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/minutes_120_title" />

    </RelativeLayout>

</RelativeLayout>
