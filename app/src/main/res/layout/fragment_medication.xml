<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="layout.Medication"
    android:background="#6db8ba">

    <RelativeLayout
        android:id="@+id/med_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/med_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Medication Title, 25mg"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/med_1_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="5:00 PM, Every Day"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/med_1_title" />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#ede9e3"
            android:layout_below="@+id/med_1_schedule"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/med_2"
        android:layout_below="@+id/med_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/med_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Medication Title 2, 10mg"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            android:textColor="#ede9e3" />

        <TextView
            android:id="@+id/med_2_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="11:00 AM, 5:00 PM, every day"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textColor="#ede9e3"
            android:layout_below="@+id/med_2_title" />


    </RelativeLayout>

    <Button
        android:id="@+id/new_medication_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="20dp"
        android:textColor="#6db8ba"
        android:text="N E W   M E D I C A T I O N"
        android:textSize="15sp"
        android:background="@drawable/rounded_button_dark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
