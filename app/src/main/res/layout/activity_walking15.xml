<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_walking15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#6db8ba"
    tools:context="sh.jer.unanxiety.Walking15">

    <TextView
        android:id="@+id/walking_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/walking_info"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:text="ENJOY A BRISK WALK"
        android:letterSpacing="0.1"
        android:textSize="19sp"
        android:textColor="#ede9e3" />

    <TextView
        android:id="@+id/walking_info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/walking_timer"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Exercise will help you clear your mind and get on with your day."
        android:textSize="16sp"
        android:textColor="#ede9e3" />

    <TextView
        android:id="@+id/walking_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="60sp"
        android:textColor="#ede9e3"/>

    <Button
        android:id="@+id/walking_start"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/walking_timer"
        android:layout_below="@id/walking_timer"
        android:layout_marginTop="32dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="S T A R T"
        android:textColor="#6db8ba"
        android:background="@drawable/rounded_button_dark"/>

    <Button
        android:id="@+id/walking_stop"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignRight="@+id/walking_timer"
        android:layout_below="@id/walking_timer"
        android:layout_marginTop="32dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="S T O P"
        android:textColor="#6db8ba"
        android:background="@drawable/rounded_button_dark"/>

</RelativeLayout>
